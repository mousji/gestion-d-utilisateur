{% extends 'base.html.twig' %}

{% block title %}
	Personnage
{% endblock %}

{% block body %}
	<h1>Liste de personnage
	</h1>

	<table class="table">
		<tr class="thead-dark">
			<th>Image</th>
			<th>Nom</th>
			<th>age</th>
			<th>Sexe</th>

			<th>force</th>
			<th>intelligence</th>
			<th>poid</th>
		</tr>
		<tr>
			{% for prsn in p %}

				<td>
					<img src="{{ asset('/images/personnages/' ~ prsn.nom ~ '.png') }}">
				</td>

				<td>
					{{ prsn.nom }}
				</td>
				<td>
					{{ prsn.age }}
				</td>
				<td>
					{% if prsn.sexe %}
						Homme

					{% else %}
						Femme

					{% endif %}
				</td>

				<td>
					{{ prsn.carac.force }}
				</td>
				<td>
					{{ prsn.carac.intel }}
				</td>
				<td>
					{{ prsn.carac.poid }}
				</td>
			</tr>
		</tr>
	{% endfor %}

</table>{% endblock %}
